@model IEnumerable<WebApiFetcher.Models.Comment>
@{
    ViewData["Title"] = "Index";
}

<html>
<body>
    <form method="POST">
        <label for="userId">User id-></label>
        <input type="text" data-val="true" id="userId" name="userId" size="15" class="rounded"
               placeholder="Enter user id" data-val-required="The user id field is required." />
        <input type="submit" />
    </form>
    @if (Model != null)
    {
    <table class="table table-bordered table-hover table-striped d-lg-table-cell">
        <thead class="thead-dark">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.First().Id)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.First().PostId)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.First().CreatedAt)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.First().Likes)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.First().Body)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.First().UserId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
        {
            <tr scope="row">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Likes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
    }

        </tbody>
    </table>
    }
</body>
</html>